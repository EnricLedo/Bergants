<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AfegirAssaig"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="8dp"
    android:padding="@dimen/marginpag">


    <TextView
        android:id="@+id/TemaAssaig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/temaAssaig"
        android:textColor="@color/negre"
        android:textSize="@dimen/sizeTablet"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/titolAssaig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/separacio"
        android:hint="@string/titol_assaig"
        android:inputType="text"
        android:minHeight="@dimen/DimensioPaperera48dp"
        android:textSize="@dimen/sizeTablet"
        app:layout_constraintTop_toBottomOf="@id/TemaAssaig" />

    <TextView
        android:id="@+id/dateAssaig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/data_assaig"
        android:layout_marginTop="@dimen/MargePapereraEsquerra20dp"
        android:textStyle="bold"
        android:textSize="@dimen/sizeTablet"
        app:layout_constraintTop_toBottomOf="@id/titolAssaig" />

    <EditText
        android:id="@+id/dataAssaig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/separacio"
        android:hint="@string/data_hora_assaig"
        android:inputType="datetime"
        android:minHeight="@dimen/DimensioPaperera48dp"
        android:textSize="@dimen/sizeTablet"
        app:layout_constraintTop_toBottomOf="@id/dateAssaig" />

    <TextView
        android:id="@+id/ubicacio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/MargePapereraEsquerra20dp"
        android:text="@string/UbicacioTitol"
        android:textColor="@color/negre"
        android:textSize="@dimen/sizeTablet"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/dataAssaig"/>

    <EditText
        android:id="@+id/ubicacioAssaig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ubicacio_assaig"
        android:layout_marginTop="@dimen/separacio"
        android:inputType="text"
        android:minHeight="@dimen/DimensioPaperera48dp"
        android:textSize="@dimen/sizeTablet"
        app:layout_constraintTop_toBottomOf="@id/ubicacio" />

    <Button
        android:id="@+id/botoGuardarAssaig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="@string/botoguardar"
        android:textSize="@dimen/sizeTablet"
        android:backgroundTint="@color/verdBergant"
        android:textColor="@color/blanc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
