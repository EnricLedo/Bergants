<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/MargeDretaBotoGuardar20dp"
    tools:context=".AfegirNoticia">

    <EditText
        android:id="@+id/titolNoticia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/MargeDretaBotoGuardar20dp"
        android:layout_marginTop="@dimen/MargeDretaBotoGuardar20dp"
        android:layout_marginEnd="@dimen/MargeDretaBotoGuardar20dp"
        android:hint="Títol de la noticia"
        android:inputType="text"
        android:minHeight="@dimen/DimensioPaperera48dp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/contingutNoticia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/MargeDretaBotoGuardar20dp"
        android:layout_marginEnd="@dimen/MargeDretaBotoGuardar20dp"
        android:hint="Contingut de la notícia"
        android:inputType="textMultiLine"
        android:minHeight="100dp"
        app:layout_constraintTop_toBottomOf="@id/titolNoticia" />

    <EditText
        android:id="@+id/dataNoticia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/MargeDretaBotoGuardar20dp"
        android:layout_marginEnd="@dimen/MargeDretaBotoGuardar20dp"
        android:hint="Data de la notícia"
        android:inputType="datetime"
        android:minHeight="@dimen/DimensioPaperera48dp"
        app:layout_constraintTop_toBottomOf="@id/contingutNoticia" />



    <ImageView
        android:id="@+id/fotoPaperera"
        android:layout_width="@dimen/smallinputheight"
        android:layout_height="@dimen/smallinputheight"
        android:layout_marginStart="@dimen/marginpag"
        android:layout_marginBottom="@dimen/separaciomig"
        android:contentDescription="@string/botoborrar"
        android:src="@drawable/iconopapelera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:clickable="true"
        android:onClick="imageClick" />

    <Button
        android:id="@+id/botoGuardarNoticia"
        android:layout_width="@dimen/btncircle"
        android:layout_height="@dimen/btncircle"
        android:layout_marginEnd="@dimen/marginpag"
        android:layout_marginBottom="@dimen/separaciomig"
        android:background="@drawable/round_button"
        android:gravity="center"
        android:text="@string/afegir"
        android:textColor="@color/blanc"
        android:textSize="@dimen/txtcircle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>