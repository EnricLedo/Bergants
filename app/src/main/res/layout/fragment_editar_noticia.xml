<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editar_noticia">

    <EditText
        android:id="@+id/editartitol"
        android:layout_width="@dimen/fullwidth"
        android:layout_height="@dimen/smallinputheight"
        android:layout_marginStart="@dimen/marginpag"
        android:layout_marginTop="@dimen/marginpag"
        android:layout_marginEnd="@dimen/marginpag"
        android:text="@string/inputtitoledit"
        android:inputType="text"
        android:textColorHint="@color/negre"
        android:textSize="@dimen/secondtitlesize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/editarnoticia"
        android:layout_width="@dimen/fullwidth"
        android:layout_height="wrap_content"
        android:text="@string/inputnoticiaedit"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editartitol"/>

    <EditText
        android:id="@+id/editardata"
        android:layout_width="@dimen/fullwidth"
        android:layout_height="wrap_content"
        android:text="27-10-22 9:27"
        android:inputType="datetime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editarnoticia"/>

    <Button
        android:id="@+id/botoafegir"
        android:layout_width="@dimen/btncircle"
        android:layout_height="@dimen/btncircle"
        android:layout_marginEnd="@dimen/marginpag"
        android:text="+"
        android:textSize="30sp"
        android:layout_marginBottom="@dimen/separaciomig"
        android:background="@drawable/round_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>