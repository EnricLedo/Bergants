<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout9"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".noticia_canvi"
    android:padding="@dimen/marginpag">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewNoticies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blanc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/cardViewNoticiesInterior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/testtest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titlenotice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grisClaretGentApuntada"
                android:gravity="center_vertical"
                android:text="Dinar de la Mercè"
                android:textColor="@color/negre"
                android:textSize="@dimen/TitolGordo18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/contingut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bergants! Els castellers de Barcelona ens conviden al dinar que organitzen després de l'actuació de la Mercè. Es fa al parc del Clot (al costat del seu local). El dinar és una fideuà i té un preu de 6 euros, si no portes coberts ni gots els has de comprar per 1 euro. Hi ha opció vegana. Després del dinar hi haurà festa! Moltes gràcies."
                android:textColor="@color/negre"
                android:textSize="@dimen/LletraNormal16sp"
                app:layout_constraintTop_toBottomOf="@+id/titlenotice" />

            <TextView
                android:id="@+id/data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grisClaretGentApuntada"
                android:text="20/09/2022"
                android:textColor="@color/grisFosc"
                android:textSize="@dimen/LletraNormal16sp"
                app:layout_constraintTop_toBottomOf="@+id/contingut" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/botoAfegirNoticia"
        android:layout_width="@dimen/btncircle"
        android:layout_height="@dimen/btncircle"
        android:layout_marginEnd="@dimen/marginpag"
        android:layout_marginBottom="@dimen/separaciomig"
        android:background="@drawable/round_button"
        android:gravity="center"
        android:text="@string/afegir"
        android:textColor="@color/blanc"
        android:textSize="@dimen/txtcircle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>