<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bergants" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/verdBergant</item>
        <item name="colorPrimaryVariant">@color/verdClar</item>
        <item name="colorOnPrimary">@color/blanc</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/verdBergant</item>
        <item name="colorSecondaryVariant">@color/verdBergant</item>
        <item name="colorOnSecondary">@color/negre</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/BergantsBoto</item>
    </style>

    <style name="Switch">
        <item name="android:thumbTint">@color/verdBergant</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/negre</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="BergantsBoto" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/verdBergant</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blanc</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>